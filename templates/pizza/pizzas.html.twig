{% extends 'base.html.twig' %}

{% block title %}Toutes les Pizzas{% endblock %}
{% block header %}
<a href="{{ path('app_index') }}">Accueil</a>
{% endblock %}

{% block body %}
    <div class="acceuil">
        <form action="{{ path('app_pizzas') }}" method="GET">
            <label for="sort">Trier par :</label>
            <select name="sort" id="sort">
                <option value="prix_asc">Prix croissant</option>
                <option value="prix_desc">Prix décroissant</option>

            </select>
            <button type="submit">Trier</button>
        </form>
        <h1>Toutes nos Pizzas :</h1>
        <section class="list-card">
        {% for pizza in pizzas %}
        <div class="card">
            <img src="{{ asset('images/uploads/' ~ pizza.image ~ '') }}" alt="{{ pizza.nom }}">
            <h2>{{ pizza.nom }}</h2>
            <p style="text-decoration: underline">{{ pizza.prix/100 }} €</p>
            <ul class="list-group">
                <h3>Ingrédients :</h3>
                {% for ingredient in pizza.ingredients %}
                    <li class="">
                        <p>{{ ingredient.nom }}</p>
                    </li>
                {% endfor %}
            </ul>
            <p  style="text-decoration: underline">{{ pizza.base }}</p>
            <a href="{{ path('app_pizza', {'id': pizza.id}) }}" class="btn">Voir</a>
        </div>
        {% endfor %}
        </section>
    </div>

{% endblock %}
